;OSCILADOR A 8Mhz
OSC_CONF:
    bsf     STATUS,RP0
    bcf     STATUS,RP1
    movlw   0xf1
    movwf   OSCCON
    banksel PORTA
    return

;SE ASEGURA DE QUE TODOS LOS PINES SON PARA USO DIGITAL
PORT_CONF:
    banksel ANSEL
    clrf    ANSEL
    clrf    ANSELH
    bcf     STATUS,RP0
    bcf     STATUS,RP1
    return

; CONFIGURA EL PORTB PARA RECIBIR EL TECLADO, ES DECIR, INTERRUPCIONES POR CAMBIO DE ESTADO EN PORTB Y ALGUNAS DE LAS 
;REISTENCIAS DE PULL UP
TECLADO_CONFIG:
    banksel TRISB
    movlw   0xf0
    movwf   TRISB
    banksel OPTION_REG
    bcf     OPTION_REG,7
    banksel WPUB
    movwf   WPUB
    banksel IOCB
    movwf   IOCB
    banksel PORTB
    movwf   PORTB
    bcf     INTCON,RBIF
    bsf     INTCON,RBIE
    return
    
;INICIALIZA LAS VARIABLES DEL PROGRAMA PRINCIPAL
INI_VAR:
    MOVLW	CONTRASENA
    MOVWF	FSR 
    CLRF	INDF
    INCF	FSR,1
    MOVLW	CONTRASENA+.34
    XORWF	FSR,0
    BTFSS	STATUS,Z
	GOTO	$-5
    
    MOVLW	.0
    MOVWF	0X26
    MOVLW	.3
    MOVWF	0X25
    MOVLW	.0
    MOVWF	0X24
RETURN